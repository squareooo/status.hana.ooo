{
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "plugins": ["import"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": false
        }
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": true,
      "typescript": true
    }
  },
  "ignorePatterns": [".eslintrc.json", ".yarn/*", ".next/*", ".husky/*"]
}
